<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="t.o.j.mapper.cmtM">
  
 	
     <insert id="insert"> 
     	insert into tk_comment(posting_num,id,name,cmt) values(#{posting_num},#{id},#{name},#{cmt})
     </insert> 
 	
    
     <select id="selectAll" resultType="cmtVO">
     <![CDATA[
 		select * from tk_comment where posting_num=#{data } order by num desc
      ]]> 
     </select>

	
</mapper>  